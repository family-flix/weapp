.flex {
  display: flex;
  position: absolute;
  align-items: center;
  height: 80rpx;
}
.tabs {
  width: 100%;
  font-size: 28rpx;
  box-sizing: border-box;
  position: relative;
  white-space: nowrap;
  height: 80rpx;
}
.tabs .tabs-wrapper {
  width: 100%;
  height: 100%;
}
.tabs .tabs-wrapper .light-tab-item,
.tabs .tabs-wrapper .dark-tab-item {
  flex: 1;
  padding: 0 24rpx;
  margin: 0 12rpx;
  height: 56rpx;
  line-height: 58rpx;
  border-radius: 28rpx;
  background-color: #fff;
  word-break: keep-all;
  text-align: center;
  box-sizing: border-box;
}
.tabs .tabs-wrapper .light-tab-item.light-active-item,
.tabs .tabs-wrapper .dark-tab-item.light-active-item {
  color: #fff;
  background-color: #ca0e2d;
  box-shadow: 0 4rpx 8rpx 0 rgba(0, 0, 0, 0.03);
}
.tabs .tabs-wrapper .light-tab-item.dark-active-item,
.tabs .tabs-wrapper .dark-tab-item.dark-active-item {
  color: #ca0e2d;
  background-color: #fff;
}
.tabs .tabs-wrapper .light-tab-item:first-child,
.tabs .tabs-wrapper .dark-tab-item:first-child {
  margin-left: 32rpx;
}
.tabs .tabs-wrapper .light-tab-item:last-child,
.tabs .tabs-wrapper .dark-tab-item:last-child {
  margin-right: 32rpx;
}
.tabs .tabs-wrapper .dark-tab-item {
  background-color: transparent;
}
.tabs-light {
  color: #040a23;
  background: #f8f9fa;
}
.tabs-dark {
  color: #fff;
  background: #ba0c29;
}
